{% extends 'base.html.twig' %}

{% block title %}Bureau
{% endblock %}

{% block stylesheets %}
	<link href="{{asset('css/offres.css') }}" type="text/css" rel="stylesheet"/>
{% endblock %}

{% block body %}
	<div class="img_top_logo">
		<img src="https://upload.wikimedia.org/wikipedia/commons/b/b2/Campingazlogo.jpg" alt="l'image charge">
	</div>
	<header>
		<nav>
			<ul>
				<li><a href="/" id="home"><img src="{{asset('img/home-closed.png')}}">Accueil</a>
				</li>
				<li><a href="/user/news" id="news"><img src="{{asset('img/news-closed.png')}}">Actualit√©s</a>
				</li>
				<li><a href="/user/offers/desktop/" id="offers"><img src="{{asset('img/discount-open.png')}}">Offres</a>
				</li>
			</ul>
		</nav>
	</header>

    <main>
        <div id="banner_top">
            <section id="banner_top_filter">
                <h1>Offres</h1>
                <p>Retrouvez toutes les offres du ce de campingaz.</p>
            </section>
        </div>
        
		<div id="link">
			<div class="row">
				<a href="/user/offers/desktop">Le bureau</a>	
